@model pfa_mvc5.Models.Auth
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <b style="color:#3c8dbc;">Identification Etudiant </b>
    </div><!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">s'identifier</p>
      @using (Html.BeginForm("logIn", "auth", FormMethod.Post, new { enctype = "multipart/form-data" }))
      {
            <div class="form-group has-feedback">
                @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control" ,@type="text" } })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
               @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
               
            </div>
            <div class="form-group has-feedback">
                @Html.CheckBoxFor(m => m.rememberme)
                @Html.LabelFor(m => m.rememberme)
            </div>
            <div class="row">
                <div class="col-xs-8">
                    
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <input type="submit" class="btn btn-primary btn-block btn-flat" value="s'identifier" />
                </div><!-- /.col -->
            </div>
        }

        <a href="#">j oublier ma mot de passe</a><br>
        <a href="register.html" class="text-center">s'inscrire</a>
    </div><!-- /.login-box-body -->
</div><!-- /.login-box -->

